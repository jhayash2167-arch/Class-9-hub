  <script>
    function toggleSidebar() {
      let sidebar = document.getElementById("sidebar");
      let content = document.getElementById("content");
      if (sidebar.style.left === "-250px") {
        sidebar.style.left = "0";
        content.style.marginLeft = "250px";
      } else {
        sidebar.style.left = "-250px";
        content.style.marginLeft = "0";
      }
    }

    function showSubject(id) {
      document.getElementById("welcome").style.display = "none";
      let sections = document.querySelectorAll("#content > div");
      sections.forEach(sec => {
        if (sec.id !== "welcome") sec.style.display = "none";
      });
      document.getElementById(id).style.display = "block";
    }

    // Accordion logic
    document.addEventListener("DOMContentLoaded", function() {
      let acc = document.getElementsByClassName("accordion");
      for (let i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function() {
          this.classList.toggle("active");
          let panel = this.nextElementSibling;
          panel.style.display = (panel.style.display === "block") ? "none" : "block";
        });
      }

      // Auto-refreshing quotes
      const quotes = [
        "“Success doesn’t come from what you do occasionally, it comes from what you do consistently.”",
        "“The future depends on what you do today.” – Mahatma Gandhi",
        "“Dream, dream, dream. Dreams transform into thoughts and thoughts result in action.” – A.P.J. Abdul Kalam",
        "“Education is the most powerful weapon which you can use to change the world.” – Nelson Mandela"
      ];
      let quoteBox = document.getElementById("quoteBox");
      setInterval(() => {
        let randomQuote = quotes[Math.floor(Math.random() * quotes.length)];
        quoteBox.textContent = randomQuote;
      }, 5000);
    });
  </script>

